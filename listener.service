[Unit]
Description=Python TCP Listener on Port 57321
# "network-online" ensures we have an IP address before starting
After=network-online.target
Wants=network-online.target

[Service]
# Use -u for unbuffered output so logs appear immediately
ExecStart=/usr/bin/python3 -u /home/username/server_listener.py

# Restart automatically if it crashes
Restart=always
RestartSec=3

[Install]
WantedBy=default.target
